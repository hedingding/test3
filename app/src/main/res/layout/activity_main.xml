<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <RelativeLayout
            android:id="@+id/rl_shouye"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        <Button
            android:id="@+id/btn_shouye"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/selsect_icon_shouye"
            android:paddingBottom="2dip"
            android:paddingTop="7dip"
            android:scaleType="matrix"
            android:background="@null"
            android:onClick="onTabClicked"
            android:text="首页"
            android:textColor="@color/select_main_zi"
            android:textSize="12sp" />

            <TextView
                android:id="@+id/unread_msg_number"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:background="@mipmap/em_unread_count_bg"
                android:gravity="center"
                android:text=""
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="12sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_shangxiaoshangcheng"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        <Button
            android:id="@+id/btn_shangxiaoshangcheng"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/selsect_icon_shouye"
            android:paddingBottom="2dip"
            android:paddingTop="7dip"
            android:background="@null"
            android:scaleType="matrix"
            android:onClick="onTabClicked"
            android:text="首页"
            android:textColor="@color/select_main_zi"
            android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_zhuiai"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        <Button
            android:id="@+id/btn_zhuiai"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/selsect_icon_shouye"
            android:paddingBottom="2dip"
            android:paddingTop="7dip"
            android:scaleType="matrix"
            android:background="@null"
            android:text="首页"
            android:onClick="onTabClicked"
            android:textColor="@color/select_main_zi"
            android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        <Button
            android:id="@+id/btn_mine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/selsect_icon_shouye"
            android:paddingBottom="2dip"
            android:paddingTop="7dip"
            android:background="@null"
            android:scaleType="matrix"
            android:text="首页"
            android:onClick="onTabClicked"
            android:textColor="@color/select_main_zi"
            android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_bottom" />

</RelativeLayout>
